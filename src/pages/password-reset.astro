---
import Layout from "@/layouts/Layout.astro";
import { PasswordResetForm } from "@/components/auth/PasswordResetForm";

const title = "Resetowanie hasła - 10xCards";
---

<Layout title={title}>
  <div class="min-h-[calc(100vh-80px)] flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold tracking-tight">Resetuj hasło</h1>
        <p class="text-muted-foreground mt-2">Nie pamiętasz hasła? Pomożemy Ci je odzyskać</p>
      </div>

      <div class="rounded-lg border bg-card p-8 shadow-sm">
        <PasswordResetForm client:load />
      </div>
    </div>
  </div>
</Layout>

