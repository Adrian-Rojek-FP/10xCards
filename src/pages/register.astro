---
import Layout from "@/layouts/Layout.astro";
import { RegisterForm } from "@/components/auth/RegisterForm";

const title = "Rejestracja - 10xCards";
---

<Layout title={title}>
  <div class="min-h-[calc(100vh-80px)] flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold tracking-tight">Utwórz konto</h1>
        <p class="text-muted-foreground mt-2">Zacznij tworzyć swoje fiszki edukacyjne</p>
      </div>

      <div class="rounded-lg border bg-card p-8 shadow-sm">
        <RegisterForm client:load />
      </div>
    </div>
  </div>
</Layout>
